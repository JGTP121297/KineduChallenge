<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_normal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/spacing_zero"
        android:layout_height="@dimen/spacing_zero"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".17" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/spacing_zero"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small"
        android:textAppearance="@style/Text.MontserratMedium.Light.Title.Bold"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Adam Warlock"
        tools:text="Adam Warlock" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="@dimen/spacing_zero"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.MontserratMedium.Light.Small"
        app:layout_constraintLeft_toLeftOf="@id/text_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        tools:text="Adam Warlock is an artificially created human who was born in a cocoon at a scientific complex called The Beehive." />

</androidx.constraintlayout.widget.ConstraintLayout>